@model List<Cliente>

<html>
<head>
    <title>Usuarios</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        /* Estilos para el formulario de inicio de sesión */

        /* Estilo para el contenedor principal */
        body {
            background-color: darkolivegreen;
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        /* Estilo para el encabezado de la tarjeta */
        .card-header {
            background-color: #007bff;
            color: white;
            font-weight: bold;
            text-align: center;
            border-bottom: 1px solid #007bff;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            padding: 10px;
        }

        /* Estilo para el cuerpo de la tarjeta */
        .card-body {
            padding: 20px;
        }

        /* Estilo para los campos de entrada */
        .form-control {
            border-radius: 4px;
            padding: 10px;
            font-size: 14px;
        }

        /* Estilo para el botón */
        .btn-primary {
            border-radius: 4px;
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            border-color: #007bff;
        }

        /* Estilo para la alerta de error */
        .alert-danger {
            margin-top: 10px;
            padding: 10px;
            border-radius: 4px;
        }
    </style>
</head>

<body style="background-color:darkolivegreen;">
    <title>Lista de Usuarios</title>
    <div class="d-flex justify-content-between align-items-center mb-3">
        <button class="btn btn-primary btn-sm">
            @Html.ActionLink("Crear Nuevo", "crear", "Cliente", null, new { @class = "text-white" })
        </button>
    </div>
    @if (Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-white">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Cedula</th>
                        <th>Direccion</th>
                        <th>Telefono</th>
                        <th>Fecha de Modificación</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr>
                            <td>@usuario.id</td>
                            <td>@usuario.nombre</td>
                            <td>@usuario.apellido</td>
                            <td>@usuario.cedula</td>
                            <td>@usuario.direccion</td>
                            <td>@usuario.telefono</td>
                            <td>@usuario.fechaModificacion</td>
                            <td>@usuario.estado</td>
                            <td>
                                @Html.ActionLink("Editar", "edit", new { id = usuario.id }, new { @class = "btn btn-primary btn-sm" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = usuario.id }, new { @class = "btn btn-danger btn-sm", onclick = "return confirm('¿Está seguro que desea eliminar este usuario?');" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No hay usuarios disponibles.</p>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
